
@{
    ViewData["Title"] = "Import";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Import</h2>

<div class="row">
    <h3>Import Master List</h3>
    <form method="post" enctype="multipart/form-data" asp-controller="People" asp-action="MasterList">
        <div class="form-group">
            <div class="col-md-10">
                <p>Upload the master person list:</p>
                <input type="file" name="files" accept="application/vnd.ms-excel"  />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Upload" />
            </div>
        </div>
    </form>

</div>

<div class="row">
    <form method="post" enctype="multipart/form-data" asp-controller="People" asp-action="Relationships">
        <div class="form-group">
            <div class="col-md-10">
                <p>Import Relationship list:</p>
                <input type="file" name="files" accept="application/vnd.ms-excel" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Upload" />
            </div>
        </div>
    </form>
</div>