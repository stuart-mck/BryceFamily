@model BryceFamily.Web.MVC.Models.Person
@inject BryceFamily.Web.MVC.Infrastructure.ClanAndPeopleService ClanService

@{
    ViewData["Title"] = "Person";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var clansSelect = ClanService.Clans.Select(c => new SelectListItem()
    {
        Selected = Model.Clan == c,
        Text = c,
        Value = c
    });

}

<h2>Person</h2>

<h4>PersonWriteModel</h4>
<hr />
<div class="row">
    <a href="~/Views/People/Person.cshtml">~/Views/People/Person.cshtml</a>
