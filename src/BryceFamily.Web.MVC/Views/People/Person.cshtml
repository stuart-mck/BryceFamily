                <div class="checkbox">
                    <label>
                        <input asp-for="SubscribeToEmail" /> @Html.DisplayNameFor(model => model.SubscribeToEmail)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

