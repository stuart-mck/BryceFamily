            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                <label asp-for="Clan" class="control-label"></label>
                <select asp-for="Clan" asp-items="clansSelect" class="form-control" ></select>
                <span asp-validation-for="Clan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
